<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainback"
    tools:context=".Leoism">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black_overlay"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_margin="2dp"
            android:id="@+id/lion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/lion"
            android:padding="5dp"
            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/leo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/leo"
            android:padding="5dp"
            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/wiki"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/wiki"
            android:padding="5dp"
            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook"
            android:padding="5dp"
            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/midvalley"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/midvalley"
            android:padding="5dp"
            />




    </LinearLayout>
    <TextView
        android:id="@+id/te"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History of Leoism"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"

        />


    <ScrollView
        android:layout_below="@id/te"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >


            <TextView
                android:padding="20dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leot"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="italic|bold" />




    </ScrollView>


</LinearLayout>