<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ad"
    tools:context=".ClubAdvisor">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black_overlay"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/aminul"

        />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@color/textColor"
    android:text="Lion Kazi Aminul Hasan"
    android:textSize="25dp"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:textColor="#000"
    android:textStyle="bold"
    />
    <TextView
        android:background="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Club Adviser"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="italic"
        />
    <TextView
        android:background="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dhaka Mid Valley Leo Club"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <TextView
        android:background="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="315B2, Bangladesh"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/adcall"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture"/>
        <ImageView
            android:id="@+id/adsms"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sms"/>
        <ImageView
            android:id="@+id/ademail"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mail"/>
    </LinearLayout>
</LinearLayout>